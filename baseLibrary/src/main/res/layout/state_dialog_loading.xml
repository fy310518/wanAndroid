<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_load_dialog_bg"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgLoadAnim"
        android:layout_width="@dimen/load_anim"
        android:layout_height="@dimen/load_anim"
        android:layout_gravity="center"
        android:src="@mipmap/image_circular" />

    <TextView
        android:id="@+id/txtLoadHint"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/spacing_small"
        android:layout_gravity="center"
        android:text="@string/data_loading"
        android:gravity="center"
        android:singleLine="true"
        android:textSize="@dimen/textSize_medium_small"
        android:textColor="@color/txtSuperColor"/>

</LinearLayout>