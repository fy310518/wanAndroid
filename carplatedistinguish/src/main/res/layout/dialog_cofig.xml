<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="车牌识别"
        android:textColor="@color/txtSuperColor"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_car_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:background="@null"
        android:drawableRight="@drawable/parking_edit_pencil"
        android:drawablePadding="8dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:singleLine="true"
        android:text="大王叫我"
        android:textColor="@color/txtSuperColor"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_title" />

    <EditText
        android:id="@+id/et_car_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:background="@null"
        android:drawableRight="@drawable/parking_edit_pencil"
        android:drawablePadding="8dp"
        android:paddingLeft="12dp"
        android:paddingTop="12dp"
        android:paddingRight="12dp"
        android:paddingBottom="12dp"
        android:text="大王叫我"
        android:textColor="@color/txtSuperColor"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_car_num" />


    <View
        android:id="@+id/line"
        android:layout_width="fill_parent"
        android:layout_height="0.5px"
        android:background="#cccccc"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@+id/et_car_color" />


    <Button
        android:id="@+id/negativeButton"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center"
        android:text="取消"
        android:textColor="#12b7f5"
        android:textSize="14sp"
        app:layout_constraintRight_toLeftOf="@+id/lineV"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />

    <View
        android:id="@+id/lineV"
        android:layout_width="0.5dp"
        android:layout_height="45dp"
        android:background="#cccccc"
        app:layout_constraintLeft_toRightOf="@+id/negativeButton"
        app:layout_constraintRight_toLeftOf="@+id/positiveButton"
        app:layout_constraintTop_toBottomOf="@+id/line"/>

    <Button
        android:id="@+id/positiveButton"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_weight="1"
        android:background="@null"
        android:gravity="center"
        android:text="确定"
        android:textColor="#12b7f5"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@+id/lineV"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line" />


</android.support.constraint.ConstraintLayout>