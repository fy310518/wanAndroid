<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rLayout"
    android:layout_width="260dp"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="车牌识别"
        android:textColor="@color/txtSuperColor"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_car_num"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_title"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/shape_reconcar_search"
        android:drawableRight="@drawable/parking_edit_pencil"
        android:drawablePadding="8dp"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingRight="12dp"
        android:paddingBottom="8dp"
        android:singleLine="true"
        android:text="大王叫我"
        android:textColor="@color/txtSuperColor"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/et_car_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/et_car_num"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/shape_reconcar_search"
        android:drawableRight="@drawable/parking_edit_pencil"
        android:drawablePadding="8dp"
        android:paddingLeft="12dp"
        android:paddingTop="8dp"
        android:paddingRight="12dp"
        android:paddingBottom="8dp"
        android:text="大王叫我"
        android:textColor="@color/txtSuperColor"
        android:textSize="14sp" />

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="0.5px"
        android:layout_below="@id/et_car_color"
        android:layout_marginTop="15dp"
        android:background="#cccccc" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/line">

        <Button
            android:id="@+id/negativeButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="取消"
            android:textColor="#12b7f5"
            android:textSize="14sp" />

        <View
            android:id="@+id/lineV"
            android:layout_width="0.5dp"
            android:layout_height="45dp"
            android:background="#cccccc" />

        <Button
            android:id="@+id/positiveButton"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="确定"
            android:textColor="#12b7f5"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>
