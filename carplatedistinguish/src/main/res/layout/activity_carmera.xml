<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/memory"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:id="@+id/surfaceViwe_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!--<ImageView-->
        <!--android:id="@+id/car"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:scaleType="center"-->
        <!--android:layout_centerInParent="true"-->
        <!--android:src="@drawable/parking_car_modle" />-->

    <CheckBox
        android:id="@+id/flash_camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:button="@null"
        android:drawableTop="@drawable/flashlight_switch_selector"
        android:drawablePadding="10dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="10dp"
        android:text="轻触打开"
        android:textColor="@color/select_txt_color"
        android:textSize="12sp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/bottomL"/>

    <RelativeLayout
        android:id="@+id/bottomL"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="#000000">

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="取消"
            android:textColor="#ffffff"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/take_pic_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/parking_take_pic" />

    </RelativeLayout>

</RelativeLayout>