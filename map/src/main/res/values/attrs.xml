<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="border_width" format="dimension" />
    <attr name="border_color" format="color" />
    <attr name="border_radius" format="dimension" />
    <declare-styleable name="CircleImageView">
        <attr name="border_width" />
        <attr name="border_color" />
    </declare-styleable>

    <declare-styleable name="RoundRectImageView">
        <attr name="border_width" />
        <attr name="border_color" />
        <attr name="border_radius" />

    </declare-styleable>


    <declare-styleable name="BubbleView">
        <attr name="arrowWidth" format="dimension" />
        <attr name="angle" format="dimension" />
        <attr name="arrowHeight" format="dimension" />
        <attr name="arrowPosition" format="dimension" />
        <attr name="bubbleColor" format="color" />
        <attr name="arrowLocation" format="enum">
            <enum name="left" value="0x00" />
            <enum name="right" value="0x01" />
            <enum name="top" value="0x02" />
            <enum name="bottom" value="0x03" />
        </attr>
    </declare-styleable>


    <declare-styleable name="MediaRecorderView">
        <attr name="mr_width" format="dimension" />
        <attr name="mr_height" format="dimension" />
        <attr name="is_open_camera" format="boolean" />
    </declare-styleable>


    <!--对焦图片-->
    <declare-styleable name="FocusImageView">
        <attr name="focus_focusing_id" format="integer" />
        <attr name="focus_success_id" format="integer" />
        <attr name="focus_fail_id" format="integer" />
    </declare-styleable>

    <!-- Defines the custom XML attributes supported for a HorizontalListView -->
    <declare-styleable name="HorizontalListView">
        <attr name="dividerWidth" format="dimension" />
        <attr name="android:divider" />
        <attr name="android:requiresFadingEdge" />
        <attr name="android:fadingEdgeLength" />
    </declare-styleable>

    <declare-styleable name="CircleIcon">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <!-- 流性布局-->
    <declare-styleable name="FlowLayout">
        <attr name="verticalSpace" format="dimension" />
        <attr name="horizontalSpace" format="dimension" />
    </declare-styleable>

    <!-- 进度百分比文字大小 -->
    <attr name="percent_text_size" format="dimension" />
    <!-- 圆形进度条边框大小 -->
    <attr name="stroke_width" format="dimension" />
    <!-- 矩形进度条 四周圆角大小 -->
    <attr name="rect_round" format="dimension" />
    <!-- 矩形进度条 是空心样式还是实心样式 -->
    <attr name="isHorizonStroke" format="boolean" />
    <!-- 进度百分比文字颜色 -->
    <attr name="percent_text_color" format="color|integer" />
    <!-- 进度条背景颜色 -->
    <attr name="progressBarBgColor" format="color|integer" />
    <!-- 扇形进度条颜色 -->
    <attr name="sectorColor" format="color|integer" />
    <!-- 扇形背景颜色 -->
    <attr name="unSweepColor" format="color|integer" />
    <!-- 进度颜色 -->
    <attr name="progressColor" format="color|integer" />
    <!-- 进度文字是否显示百分号 -->
    <attr name="showPercentSign" format="boolean"/>
    <!-- 进度条样式圆形还是矩形 -->
    <attr name="orientation">
        <enum name="horizontal" value="0"/>
        <enum name="circle" value="1"/>
        <enum name="sector" value="2"/>
    </attr>

    <declare-styleable name="cbprogressbar">
        <attr name="percent_text_size"/>
        <attr name="isHorizonStroke"/>
        <attr name="percent_text_color"/>
        <attr name="progressBarBgColor"/>
        <attr name="progressColor"/>
        <attr name="sectorColor"/>
        <attr name="unSweepColor"/>
        <attr name="orientation"/>
        <attr name="stroke_width"/>
        <attr name="rect_round"/>
        <attr name="showPercentSign"/>
    </declare-styleable>


    <declare-styleable name="HeaderViewPager">
        <attr name="hvp_topOffset" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="ScrollLayout">

        <attr name="minOffset" format="dimension" />

        <attr name="maxOffset" format="dimension" />

        <attr name="exitOffset" format="dimension" />

        <attr name="mode">
            <flag name="open" value="0x0" />
            <flag name="close" value="0x1" />
            <flag name="exit" value="0x2" />
        </attr>

        <attr name="allowHorizontalScroll" format="boolean"/>

        <attr name="isSupportExit" format="boolean"/>

    </declare-styleable>

    <declare-styleable name="PickerView">

        <attr name="isLoop" format="boolean" />

    </declare-styleable>

    <declare-styleable name="DatePicker">
        <attr name="monthViewHeight" format="float"/>
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <!-- 允许显示最大行数 -->
        <attr name="maxCollapsedLines" format="integer"/>
        <attr name="animDuration" format="integer"/>
        <attr name="animAlphaStart" format="float"/>
        <attr name="expandText" format="string"/>
        <attr name="collapseText" format="string"/>
    </declare-styleable>

    <declare-styleable name="day">
        <attr name="state_current" format="boolean" />
    </declare-styleable>

    <attr name="calendarViewStyle" format="reference" />

    <declare-styleable name="CustomAutoLinearLayout">
        <attr name="hasCircular" format="boolean"/>
        <attr name="cornerSize" format="dimension"/>
        <attr name="triangleGravity" format="enum">
            <enum name="right" value="0"/>
            <enum name="left" value="1"/>
            <enum name="top" value="2"/>
            <enum name="bottom" value="3"/>
            <enum name="right_top" value="4"/>
            <enum name="right_bottom" value="5"/>
            <enum name="left_top" value="6"/>
            <enum name="left_bottom" value="7"/>
            <enum name="top_right" value="8"/>
            <enum name="top_left" value="9"/>
            <enum name="bottom_right" value="10"/>
            <enum name="bottom_left" value="11"/>
        </attr>
        <attr name="backgroundColor" format="color"/>
        <attr name="triangleSize" format="dimension"/>
        <attr name="triangleOffset" format="dimension"/>
    </declare-styleable>
</resources>