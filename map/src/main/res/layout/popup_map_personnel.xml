<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:paddingTop="12dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgUserHead"
                    android:layout_width="61dp"
                    android:layout_height="61dp"
                    android:src="@mipmap/default_pic_icon" />

                <LinearLayout
                    android:layout_marginLeft="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/imgUserHead"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvPersonnelName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="吴警官"
                        android:textColor="#000000"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvMarkType"
                        android:layout_width="60dp"
                        android:layout_height="24dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/shape_gray_frame"
                        android:gravity="center"
                        android:text="人员"
                        android:textColor="@color/text_blue"
                        android:textSize="14sp" />
                </LinearLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/tvRemarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="已巡逻......"
                android:textColor="@color/font_gray"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvNavigation"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_blue"
            android:drawableLeft="@mipmap/navigation_white"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:text="导航"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="12dp"
        android:background="@color/color_eee" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvFunction1"
                android:layout_width="110dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/shape_blue"
                android:gravity="center"
                android:text="新建指令"
                android:textColor="#eeeeee"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/tvFunction2"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/shape_blue"
                android:gravity="center"
                android:text="电话"
                android:textColor="#eeeeee"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tvFunction3"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:layout_marginLeft="16dp"
                android:background="@drawable/shape_blue"
                android:gravity="center"
                android:text="语音"
                android:textColor="#eeeeee"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>