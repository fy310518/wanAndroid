<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gc.unifiedlogin">

    <application
        android:name=".UnifiedLoginApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:networkSecurityConfig="@xml/network_security_config"
        android:theme="@style/wanAndroidTheme"
        tools:ignore="GoogleAppIndexingWarning,UnusedAttribute">

        <activity
            android:name="com.fy.baselibrary.startactivity.StartActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTop"
            android:theme="@style/startUpTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="${applicationId}.startactivity.StartActivity" />
            </intent-filter>
        </activity>

        <activity
            android:name=".login.LoginActivity"
            android:label="@string/login"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="${applicationId}.login.LoginActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <!--<activity-->
            <!--android:name=".main.MainActivity"-->
            <!--android:label="@string/mainTitle"-->
            <!--android:launchMode="singleTask"-->
            <!--android:screenOrientation="portrait" />-->

        <!-- 设计稿 宽度 （用于屏幕适配）  -->
        <meta-data
            android:name="rudeness_Adapter_Screen_width"
            android:value="${app_Adapter_Screen_width}" />





        <activity android:name=".sysnotify.SysNotifyActivity"
            android:label="@string/notifyList"
            android:screenOrientation="portrait" />

        <!-- 接收门户广播 -->
        <receiver
            android:name=".sysnotify.SysNotifyReceiver"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.MESSAGE_ARRIVED" />
            </intent-filter>
        </receiver>

    </application>



    <!-- 允许访问摄像头 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />


    <!-- 访问网络 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 拨打电话的权限 -->
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <!-- 通知 -->
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <!-- 往SDCard写入数据权限  写权限已经包含了读权限了 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
</manifest>