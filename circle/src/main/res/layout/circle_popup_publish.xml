<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e4ffffff"
    android:paddingBottom="@dimen/spacing_medium_small">

    <ImageView
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_medium_small"
        android:src="@drawable/icon_close"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_dynamic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/icon_type_new"
        android:drawablePadding="@dimen/spacing_small"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/dynamic"
        android:textColor="@color/txtSuperColor"
        android:textSize="@dimen/txt_small_much"
        android:layout_marginLeft="@dimen/spacing_medium_small"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintTop_toBottomOf="@+id/iv_close"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_assist_notice"/>

    <TextView
        android:id="@+id/tv_assist_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/icon_type_help"
        android:drawablePadding="@dimen/spacing_small"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/bulletin"
        android:textColor="@color/txtSuperColor"
        android:textSize="@dimen/txt_small_much"
        app:layout_constraintTop_toBottomOf="@+id/iv_close"
        app:layout_constraintLeft_toRightOf="@+id/tv_dynamic"
        app:layout_constraintRight_toLeftOf="@+id/tv_case_analyse"/>

    <TextView
        android:id="@+id/tv_case_analyse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/icon_type_case"
        android:drawablePadding="@dimen/spacing_small"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/CaseSharing"
        android:textColor="@color/txtSuperColor"
        android:textSize="@dimen/txt_small_much"
        app:layout_constraintTop_toBottomOf="@+id/iv_close"
        app:layout_constraintLeft_toRightOf="@+id/tv_assist_notice"
        app:layout_constraintRight_toLeftOf="@+id/tv_community_industry"/>

    <TextView
        android:id="@+id/tv_community_industry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/icon_type_class"
        android:drawablePadding="@dimen/spacing_small"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/MicroClassroom"
        android:textColor="@color/txtSuperColor"
        android:textSize="@dimen/txt_small_much"
        android:layout_marginRight="@dimen/spacing_medium_small"
        app:layout_constraintTop_toBottomOf="@+id/iv_close"
        app:layout_constraintLeft_toRightOf="@+id/tv_case_analyse"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>