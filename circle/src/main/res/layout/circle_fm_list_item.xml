<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/circle_shape_select"
    android:paddingLeft="@dimen/spacing_medium_small"
    android:paddingTop="@dimen/spacing_small"
    android:paddingRight="@dimen/spacing_medium_small"
    android:paddingBottom="@dimen/spacing_small">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imgHead"
        android:layout_width="@dimen/rvImg"
        android:layout_height="@dimen/rvImg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/default_pic_icon" />

    <TextView
        android:id="@+id/txt_post_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_small"
        android:layout_marginTop="@dimen/spacing_medium_small"
        android:drawablePadding="@dimen/spacing_small_much"
        android:singleLine="true"
        android:text="姓名"
        android:textColor="@color/txtSuperColor"
        android:textSize="@dimen/txt_small"
        app:layout_constraintLeft_toRightOf="@+id/imgHead"
        app:layout_constraintTop_toTopOf="@+id/imgHead" />

    <TextView
        android:id="@+id/tv_level"
        android:layout_width="25dp"
        android:layout_height="14dp"
        android:layout_marginLeft="@dimen/spacing_small_much"
        android:background="@drawable/shape_ffb100"
        android:gravity="center"
        android:singleLine="true"
        android:text="Lv3"
        android:textColor="@color/white"
        android:textSize="8sp"
        app:layout_constraintBottom_toBottomOf="@+id/txt_post_name"
        app:layout_constraintLeft_toRightOf="@+id/txt_post_name"
        app:layout_constraintTop_toTopOf="@+id/txt_post_name" />

    <TextView
        android:id="@+id/txt_dynamic_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_medium_small"
        android:singleLine="true"
        android:text="时间"
        android:textColor="@color/txtLight"
        android:textSize="10sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imgHead" />

    <TextView
        android:id="@+id/txt_dynamic_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_small"
        android:singleLine="true"
        android:text="单位"
        android:textColor="@color/txtSecondColor"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/imgHead"
        app:layout_constraintLeft_toRightOf="@+id/imgHead" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/imgHead">

        <include layout="@layout/circle_include_item_content" />

        <com.gcstorage.circle.widgets.NineGridView
            android:id="@+id/nine_grid_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/txt_dynamic_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:background="@drawable/selector_view_content_state"
            android:clickable="true"
            android:singleLine="true"
            android:text="未公开位置信息"
            android:textColor="@color/font_gray"
            android:textSize="10sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_read_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:singleLine="true"
                android:text="浏览次数"
                android:textColor="@color/font_gray"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/llayout_post_certify"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_post_appraisal_man"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_admin" />

                <ImageView
                    android:id="@+id/iv_post_appraisal_xia"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:drawablePadding="5dp"
                    android:gravity="center_horizontal"
                    android:src="@drawable/icon_admin_open" />

            </LinearLayout>

            <!-- 点赞数 -->
            <TextView
                android:id="@+id/txt_good_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rv_touch_bg"
                android:drawableLeft="@drawable/icon_dynamic_honor_new"
                android:drawablePadding="5dp"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:text="4"
                android:textColor="@color/font_gray"
                android:textSize="10sp" />

            <!-- 评论数 -->
            <TextView
                android:id="@+id/txt_comment_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="@drawable/rv_touch_bg"
                android:drawableLeft="@drawable/icon_dynamic_comment_new"
                android:drawablePadding="5dp"
                android:gravity="center_horizontal"
                android:text="4"
                android:textColor="@color/font_gray"
                android:textSize="10sp" />

            <!-- 积分 -->
            <TextView
                android:id="@+id/tv_integral_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/rv_touch_bg"
                android:drawableLeft="@drawable/icon_circle_integral_none"
                android:drawablePadding="5dp"
                android:singleLine="true"
                android:text="0"
                android:textColor="@color/font_gray"
                android:textSize="10sp" />
        </LinearLayout>

        <!-- 点赞人名 -->
        <TextView
            android:id="@+id/praise_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="3"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:textColor="#697A9F"
            android:textSize="@dimen/txt_small_much" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>