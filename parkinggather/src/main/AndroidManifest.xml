<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.gcstorage.parkinggather">

    <application
        android:name=".ParkingGatherApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/wanAndroidTheme"
        tools:ignore="GoogleAppIndexingWarning,UnusedAttribute">

        <activity
            android:name="com.fy.baselibrary.startactivity.StartActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTop"
            android:theme="@style/startUpTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="${applicationId}.startactivity.StartActivity" />
            </intent-filter>
        </activity>

        <!-- 欢迎页 -->
        <activity
            android:name=".login.StartUpActivity"
            android:label="@string/srartUpTitle"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="${applicationId}.login.StartUpActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".login.LoginActivity"
            android:label="@string/loginTitle"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="${applicationId}.login.LoginActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".main.MainActivity"
            android:label="@string/parkingGather"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <!--  驻车采集 >> 采集详情 -->
        <activity android:name=".carinfo.CarGatherInfoActivity"
            android:label=""
            android:screenOrientation="portrait"/>

        <!-- 排行activity （个人排行榜、分局排行榜） -->
        <activity android:name=".ranking.RankingListActivity"
            android:label=""
            android:screenOrientation="portrait" />

        <!-- 采集历史 -->
        <activity android:name=".history.CollectHistoryActivity"
            android:label="@string/collectHistory"
            android:screenOrientation="portrait"/>

        <activity android:name=".history.ParkCarMapActivity"
            android:label=""
            android:screenOrientation="portrait"/>

        <activity android:name=".querycar.QueryCarActivity"
            android:label="@string/queryCar"
            android:screenOrientation="portrait"/>

        <!-- 设计稿 宽度 （用于屏幕适配）  -->
        <meta-data
            android:name="rudeness_Adapter_Screen_width"
            android:value="${app_Adapter_Screen_width}" />


        <!--<activity android:name=".MainActivity" >-->
            <!--<intent-filter>-->
                <!--<action android:name="android.intent.action.MAIN" />-->
                <!--<category android:name="android.intent.category.LAUNCHER" />-->
            <!--</intent-filter>-->
        <!--</activity>-->

    </application>


    <!-- 允许访问摄像头 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />


    <!-- 访问网络 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 通知 -->
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />

    <!-- 往SDCard写入数据权限  写权限已经包含了读权限了 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 在SDCard中创建与删除文件权限 -->
    <uses-permission
        android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"
        tools:ignore="ProtectedPermissions" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />

    <!-- GPS定位权限 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
</manifest>
