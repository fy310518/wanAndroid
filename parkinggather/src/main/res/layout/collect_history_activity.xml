<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:picker="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <com.gcstorage.parkinggather.widget.datepicker.views.DatePicker
        android:id="@+id/dp_history"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/lineBottom"
        app:layout_constraintTop_toTopOf="parent"
        picker:monthViewHeight="1.2" />

    <View
        android:id="@+id/lineBottom"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@color/lineColor"
        app:layout_constraintBottom_toTopOf="@+id/txtLeftTips" />

    <TextView
        android:id="@+id/txtLeftTips"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/shape_oval_blue"
        android:drawablePadding="12dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="已采集"
        android:textColor="@color/txtSuperColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/txtRightTips" />

    <TextView
        android:id="@+id/txtRightTips"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:drawableLeft="@drawable/shape_oval_blue_light"
        android:drawablePadding="12dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="今天"
        android:textColor="@color/txtSuperColor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/txtLeftTips"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>