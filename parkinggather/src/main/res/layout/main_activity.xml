<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.fy.baselibrary.widget.refresh.EasyPullLayout
        android:id="@+id/epl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:max_offset_bottom="@dimen/load_more_max_offset"
        app:max_offset_top="@dimen/max_offset"
        app:pull_animator_bottom="@string/easyPullAnimatorBottom"
        app:pull_animator_top="@string/easyPullAnimatorTop"
        app:sticky_factor="0.1"
        app:trigger_offset_bottom="@dimen/loadMoreHeight"
        app:trigger_offset_top="@dimen/refreshHeight">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvParkingGather"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/BgColor"
            app:layout_type="content" />

    </com.fy.baselibrary.widget.refresh.EasyPullLayout>


    <ImageView
        android:id="@+id/iv_collect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_gravity="bottom|center_horizontal"
        android:src="@drawable/icon_collect" />

</FrameLayout>
