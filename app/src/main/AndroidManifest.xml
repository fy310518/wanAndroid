<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fy.wanandroid">

    <application
        android:name=".WanAndroidApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/BaseAppTheme">

        <activity
            android:name="com.fy.baselibrary.startactivity.StartActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTop"
            android:theme="@style/myTransparent">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <action android:name="${applicationId}.startactivity.StartActivity" />
            </intent-filter>
        </activity>

        <activity
            android:name=".main.MainActivity"
            android:label="@string/mainTitle"
            android:launchMode="singleTask"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="${applicationId}.main.MainActivity" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name=".login.LoginActivity"
            android:label="@string/logingTitle"
            android:screenOrientation="portrait" />

        <activity
            android:name=".login.RegisterActivity"
            android:label="@string/registerTitle"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustResize|stateVisible" />

        <activity
            android:name=".collect.MyCollectActivity"
            android:label="@string/myCollect"
            android:screenOrientation="portrait" />

        <activity
            android:name=".about.AboutActivity"
            android:label="@string/aboutTitle"
            android:screenOrientation="portrait" />

        <!-- 加载 web 网页 -->
        <activity
            android:name=".web.WebViewActivity"
            android:screenOrientation="portrait" />

        <!-- 搜索 -->
        <activity
            android:name=".search.SearchActivity"
            android:label="@string/search"
            android:screenOrientation="portrait" />

        <!-- 知识体系下的 文章 -->
        <activity android:name=".hierarchy.HierarchyActivity"
            android:label=""
            android:screenOrientation="portrait"/>



        <activity
            android:name=".status.StatusDemoActivity"
            android:label="@string/statusTitle"
            android:screenOrientation="portrait" />

        <activity android:name=".loadfile.DownFileActivity"
            android:label="@string/fileDown"
            android:screenOrientation="portrait" />

        <!-- 设计稿 宽度 （用于屏幕适配）  -->
        <meta-data android:name="Rudeness_Adapter_Screen_width" android:value="360" />

    </application>

    <!-- 允许访问摄像头 -->
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />
    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />



</manifest>