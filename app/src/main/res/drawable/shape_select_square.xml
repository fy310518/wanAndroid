<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="150"
    android:exitFadeDuration="100">

    <item android:state_pressed="true" >
        <shape android:shape="rectangle">
            <solid android:color="@color/button_pressed2" />

            <stroke android:color="@color/lineColor"
                android:width="@dimen/shape_Stroke"/>
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/button_normal2" />

            <stroke android:color="@color/lineColor"
                android:width="@dimen/shape_Stroke"/>
        </shape>
    </item>
</selector>