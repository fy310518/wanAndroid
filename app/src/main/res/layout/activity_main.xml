<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/main_fragemnet_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/BgColor"
        app:layout_constraintBottom_toTopOf="@+id/radioGlayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radioGlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">
        <!-- 底部导航start -->
        <RadioButton
            android:id="@+id/rBtnOne"
            style="@style/mainBottomBtnStyle"
            android:drawableTop="@drawable/selector_main_one"
            android:text="@string/mainTabOne" />

        <RadioButton
            android:id="@+id/rBtnTwo"
            style="@style/mainBottomBtnStyle"
            android:drawableTop="@drawable/selector_main_two"
            android:text="@string/mainTabTwo" />

        <RadioButton
            android:id="@+id/rBtnThree"
            style="@style/mainBottomBtnStyle"
            android:drawableTop="@drawable/selector_main_three"
            android:text="@string/mainTabThree" />

        <RadioButton
            android:id="@+id/rBtnFour"
            style="@style/mainBottomBtnStyle"
            android:drawableTop="@drawable/selector_main_four"
            android:text="@string/mainTabFour" />

        <RadioButton
            android:id="@+id/rBtnFive"
            style="@style/mainBottomBtnStyle"
            android:drawableTop="@drawable/selector_main_five"
            android:text="@string/mainTabFive" />
        <!-- 底部导航end -->
    </RadioGroup>

    <ImageView
        android:id="@+id/loadImg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/loading"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
