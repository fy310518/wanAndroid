<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eeeeee">

    <TextView
        android:id="@+id/head"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#66000000"
        app:layout_constraintDimensionRatio="16:8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#ad7"
        app:layout_constraintDimensionRatio="16:8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/head" />

    <Button
        android:id="@+id/btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="揭露动画启动按钮"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.9" />

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imgAngel"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:srcCompat="@drawable/svg_angel" />

    <View
        android:id="@+id/loadBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/imgAngel"
        app:layout_constraintRight_toRightOf="@id/imgAngel"
        app:layout_constraintBottom_toBottomOf="@id/imgAngel"
        app:layout_constraintLeft_toLeftOf="@id/imgAngel"/>

    <com.fy.baselibrary.widget.CircleProgressBar
        android:id="@+id/circleProgress"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toTopOf="@id/imgAngel"
        app:layout_constraintRight_toRightOf="@id/imgAngel"
        app:layout_constraintBottom_toBottomOf="@id/imgAngel"
        app:layout_constraintLeft_toLeftOf="@id/imgAngel" />
</android.support.constraint.ConstraintLayout>