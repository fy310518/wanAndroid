<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_select_square"
    android:paddingBottom="@dimen/spacing_small"
    android:paddingLeft="@dimen/spacing_medium_small"
    android:paddingRight="@dimen/spacing_medium_small"
    android:paddingTop="@dimen/spacing_small">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/imgRightArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/spacing_medium_small"
        app:srcCompat="@drawable/svg_right_arrow" />

    <TextView
        android:id="@+id/tvTree"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/imgRightArrow"
        android:text="aa"
        android:textColor="@color/txtSuperColor"
        android:textSize="@dimen/txt_medium" />

    <TextView
        android:id="@+id/tvChildTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tvTree"
        android:layout_marginTop="@dimen/spacing_medium_small"
        android:layout_toLeftOf="@+id/imgRightArrow"
        android:text=""
        android:textColor="@color/txtSecondColor"
        android:textSize="@dimen/txt_small" />

</RelativeLayout>